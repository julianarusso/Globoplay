<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1819"
    android:backgroundTint="#1C1819"
    tools:context=".MainActivity">


 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

  <TextView
      android:id="@+id/tv001"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Filmes"
      android:textColor="#FFFFFF"
      android:textColorHint="#FFFFFF"
      android:textSize="20sp"
      app:layout_constraintTop_toBottomOf="@+id/toolbar"
      tools:layout_editor_absoluteX="1dp" />

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="396dp"
      android:layout_height="67dp"
      android:layout_marginEnd="8dp"
      android:background="@color/black"
      android:minHeight="?attr/actionBarSize"
      android:theme="?attr/actionBarTheme"
      app:layout_constraintEnd_toEndOf="parent"
      app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
      tools:layout_editor_absoluteY="-8dp" />

  <HorizontalScrollView
      android:id="@+id/hsv001"
      android:layout_width="410dp"
      android:layout_height="196dp"
      app:layout_constraintTop_toBottomOf="@+id/tv001">

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:orientation="horizontal">

    <ImageView
        android:id="@+id/aneis"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@tools:sample/avatars"
        app:srcCompat="@drawable/tmdb_senhordosaneis" />

    <ImageView
        android:id="@+id/garotos"
        android:layout_width="140dp"
        android:layout_height="208dp"
        android:layout_weight="1"
        android:src="@tools:sample/avatars"
        app:srcCompat="@drawable/tmdb_paratodososgarotosquejaamei" />

    <ImageView
        android:id="@+id/donzela"
        android:layout_width="140dp"
        android:layout_height="208dp"
        android:layout_weight="1"
        android:src="@tools:sample/avatars"
        app:srcCompat="@drawable/tmdb_donzela" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="138dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@tools:sample/avatars"
        app:srcCompat="@drawable/tmdb_harrypotter" />

   </LinearLayout>
  </HorizontalScrollView>

  <TextView
      android:id="@+id/tv002"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="SÃ©ries"
      android:textColor="#FFFFFF"
      android:textSize="20sp"
      app:layout_constraintTop_toBottomOf="@+id/hsv001"
      tools:layout_editor_absoluteX="1dp" />

  <HorizontalScrollView
      android:id="@+id/hsv002"
      android:layout_width="410dp"
      android:layout_height="206dp"
      app:layout_constraintTop_toBottomOf="@+id/tv002" >

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:orientation="horizontal">

    <ImageView
        android:id="@+id/noturno"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@tools:sample/avatars"
        app:srcCompat="@drawable/tmdb_agentenoturno" />

    <ImageView
        android:id="@+id/desventuras"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@tools:sample/avatars"
        app:srcCompat="@drawable/tmdb_desventurasemserie" />

     <ImageView
        android:id="@+id/pll"
        android:layout_width="136dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/tmdb_pllumnovopecado" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@tools:sample/avatars"
        app:srcCompat="@drawable/tmdb_plltheperfectionists" />
   </LinearLayout>
  </HorizontalScrollView>

  <TextView
      android:id="@+id/tv003"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Desenho Animado"
      android:textColor="#F6F6F6"
      android:textSize="20sp"
      app:layout_constraintTop_toBottomOf="@+id/hsv002"
      tools:layout_editor_absoluteX="1dp" />

  <HorizontalScrollView
      android:id="@+id/hsv003"
      android:layout_width="410dp"
      android:layout_height="203dp"
      app:layout_constraintTop_toBottomOf="@+id/tv003" >

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:orientation="horizontal">

    <ImageView
        android:id="@+id/falls"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@tools:sample/avatars"
        app:srcCompat="@drawable/tmdb_gravityfalls" />

    <ImageView
        android:id="@+id/masha"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@tools:sample/avatars"
        app:srcCompat="@drawable/tmdb_marshaeourso" />

    <ImageView
        android:id="@+id/amigaozao"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@tools:sample/avatars"
        app:srcCompat="@drawable/tmdb_meuamigaozao" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@tools:sample/avatars"
        app:srcCompat="@drawable/tmdb_mulan" />
   </LinearLayout>
  </HorizontalScrollView>

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="GloboPlay"
      android:textColor="#FDFCFC"
      android:textSize="30sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

 </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>